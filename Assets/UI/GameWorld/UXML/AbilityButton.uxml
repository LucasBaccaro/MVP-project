<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <Style src="../USS/AbilityBar.uss" />

    <ui:VisualElement name="ability-button" class="ability-button">
        <!-- Capa 1: Background del slot -->
        <ui:VisualElement name="ability-background" class="ability__background" />

        <!-- Capa 2: Icono de la habilidad (se asigna dinÃ¡micamente en C#) -->
        <ui:VisualElement name="ability-icon" class="ability__icon" />
                                     
        <!-- Capa 3: Highlight (se muestra en hover) -->
        <ui:VisualElement name="ability-highlight" class="ability__highlight" />

        <!-- Capa 4: Overlay oscuro para cooldown -->
        <ui:VisualElement name="cooldown-overlay" class="ability__cooldown-overlay" />

        <!-- Capa 5: Texto del countdown (ej: 3.5s) -->
        <ui:Label name="cooldown-text" text="0.0" class="ability__cooldown-text" />

        <!-- Capa 6: Hotkey (1, 2, 3, 4) en esquina inferior derecha -->
        <ui:Label name="hotkey-text" text="1" class="ability__hotkey-text" />
    </ui:VisualElement>
</ui:UXML>
